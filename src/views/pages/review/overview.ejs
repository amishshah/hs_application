<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../../partials/head.ejs %>
  <link type="text/css" href="/css/admin.css" rel="stylesheet" />
  <title>Applications | Admin</title>
</head>

<body>

    <div class="wrapper">
        <%- include('../../partials/navbar', { currentPage: "review-overview" }) %>
        <div class="main-panel">
        <div class="content">
            <div class="container-fluid">

            <div class="row justify-content-center">
                <h1 style="display: none;">Applications Management</h1>
            </div>

                <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                    <h2 class="card-title text-center">Applications Overview</h2>
                    </div>

                    <div class="card-body applicants-scroll">
                    <table class="table">
                        <thead class="text-primary">
                        <tr>
                            <% applicationRows.forEach((row) => { %>
                                <% if (row.length > 1) { %>
                                  <th class="text-center" data-toggle="tooltip" data-placement="top" title="<%= row[1] %>"><%= row[0] %></th>
                                <% } else { %>
                                  <th class="text-center"><%= row[0] %></th>
                                <% } %>
                              <% }) %>
                        </tr>
                        </thead>
                        <tbody id="applications-container">
                            <% applications.forEach((applicant, index) => { %>
                                <tr>
                                  <td class="text-center"><%= applicant.applicantId %></td>
                                  <td class="text-center"><%= applicant.email %></td>
                                  <td class="text-center"><%= applicant.averageScore %></td>
                                </tr>
                              <% }) %>
                        </tbody>
                    </table>
                    </div>
                </div>
                </div>

            </div> <!-- end row -->

            </div>
        </div>
        <% include ../../partials/footer.ejs %>
        </div>
    </div>
</body>